{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "includeFiles": [
          "requirements.txt",
          "auth.py",
          "models.py",
          "database.py"
        ]
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "main.py" }
  ],
  "env": {
    "DATABASE_URL": "@mysql_url"
  }
}
